<div class="post-page">
  <div class="post">
    <div class="card">
      <div class="card-body">
        <div class="mb-3">
          <label for="newPostTitle" class="form-label">Post Title</label>
          <input
            type="text"
            class="form-control"
            id="newPostTitle"
            value="{{post.title}}"
          />
        </div>
        <div class="mb-3">
          <label for="newPostContent" class="form-label">Post Content</label>
          <textarea
            class="form-control"
            id="newPostContent"
            rows="3"
          >{{post.content}}</textarea>
        </div>
        <button type="button" class="btn btn-primary edit-post-btn">Finish Editing Post</button>
      </div>
    </div>
  </div>
</div>

<script src="/js/post.js"></script>